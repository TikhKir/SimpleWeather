<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.simpleweather.ui.home.HomeFragment"
        android:label="@string/title_favourite"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_conditionDetailsFragment"
            app:destination="@id/conditionDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.simpleweather.ui.search.SearchFragment"
        android:label="@string/title_search_by_name"
        tools:layout="@layout/search_fragment" >
        <action
            android:id="@+id/action_searchFragment_to_conditionDetailsFragment"
            app:destination="@id/conditionDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/conditionDetailsFragment"
        android:name="com.example.simpleweather.ui.conditiondetails.ConditionDetailsFragment"
        android:label="condition_details_fragment"
        tools:layout="@layout/condition_details_fragment" >
        <argument
            android:name="locationId"
            app:argType="integer" />
        <argument
            android:name="latitude"
            app:argType="float" />
        <argument android:name="longitude"
            app:argType="float" />
    </fragment>
</navigation>